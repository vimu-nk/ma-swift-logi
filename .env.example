# ──────────────────────────────────────────────
# SwiftTrack — Environment Configuration
# Copy to .env and adjust values for your environment
# ──────────────────────────────────────────────

# ── General ───────────────────────────────────
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# ── PostgreSQL ────────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=swifttrack
POSTGRES_PASSWORD=swifttrack_secret
POSTGRES_DB=swifttrack
DATABASE_URL=postgresql+asyncpg://swifttrack:swifttrack_secret@postgres:5432/swifttrack

# ── RabbitMQ ──────────────────────────────────
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=swifttrack
RABBITMQ_PASSWORD=swifttrack
RABBITMQ_MGMT_PORT=15672
RABBITMQ_URL=amqp://swifttrack:swifttrack@rabbitmq:5672/

# ── JWT / Auth ────────────────────────────────
JWT_SECRET_KEY=CHANGE-ME-in-production-use-a-real-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ── Service Ports (host mapping) ──────────────
API_GATEWAY_PORT=8000
ORDER_SERVICE_PORT=8001
INTEGRATION_SERVICE_PORT=8002
NOTIFICATION_SERVICE_PORT=8003
CMS_MOCK_PORT=8004
ROS_MOCK_PORT=8005
WMS_MOCK_TCP_PORT=9000
WMS_MOCK_HEALTH_PORT=9001

# ── Internal Service URLs (Docker network) ────
ORDER_SERVICE_URL=http://order_service:8001
INTEGRATION_SERVICE_URL=http://integration_service:8002
NOTIFICATION_SERVICE_URL=http://notification_service:8003
CMS_MOCK_SOAP_URL=http://cms_mock_soap:8004
ROS_MOCK_REST_URL=http://ros_mock_rest:8005
WMS_MOCK_TCP_HOST=wms_mock_tcp
WMS_MOCK_TCP_PORT_INTERNAL=9000
